Global MainWindow

Global TxtName, TxtCommand, BtnDel, BtnSave, BtnAdd, BtnRun, txt, txt, ListCmd, BtnMoveUp, BtnMoveDown

Enumeration FormFont
  #Font_MainWindow_0
EndEnumeration

LoadFont(#Font_MainWindow_0,"Arial", 10)

Declare ResizeGadgetsMainWindow()

Declare BtnAddEvent(EventType)
Declare BtnDownEvent(EventType)
Declare ListCmdEvent(EventType)
Declare BtnRunEvent(EventType)
Declare BtnSaveEvent(EventType)
Declare BtnUpEvent(EventType)
Declare BtnDelEvent(EventType)

Procedure OpenMainWindow(x = 0, y = 0, width = 380, height = 380)
  MainWindow = OpenWindow(#PB_Any, x, y, width, height, "Shell Manager", #PB_Window_SystemMenu | #PB_Window_MinimizeGadget | #PB_Window_ScreenCentered)
  TxtName = StringGadget(#PB_Any, 110, 270, 260, 25, "")
  TxtCommand = StringGadget(#PB_Any, 110, 300, 260, 25, "")
  BtnDel = ButtonGadget(#PB_Any, 260, 340, 50, 25, "Del")
  BtnSave = ButtonGadget(#PB_Any, 320, 340, 50, 25, "Save")
  BtnAdd = ButtonGadget(#PB_Any, 200, 340, 50, 25, "Add")
  BtnRun = ButtonGadget(#PB_Any, 10, 340, 60, 25, "Run")
  txt = TextGadget(#PB_Any, 10, 270, 40, 25, "Name:")
  SetGadgetFont(txt, FontID(#Font_MainWindow_0))
  txt = TextGadget(#PB_Any, 10, 300, 90, 25, "CommandLine:")
  ListCmd = ListViewGadget(#PB_Any, 10, 10, 360, 250)
  BtnMoveUp = ButtonGadget(#PB_Any, 100, 340, 30, 25, "↑")
  BtnMoveDown = ButtonGadget(#PB_Any, 140, 340, 30, 25, "↓")
EndProcedure

Procedure ResizeGadgetsMainWindow()
  Protected FormWindowWidth, FormWindowHeight
  FormWindowWidth = WindowWidth(MainWindow)
  FormWindowHeight = WindowHeight(MainWindow)
  ResizeGadget(ListCmd, 10, 10, FormWindowWidth - 20, 250)
EndProcedure

Procedure MainWindow_Events(event)
  Select event
    Case #PB_Event_SizeWindow
      ResizeGadgetsMainWindow()
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
        Case BtnDel
          BtnDelEvent(EventType())          
        Case BtnSave
          BtnSaveEvent(EventType())          
        Case BtnAdd
          BtnAddEvent(EventType())          
        Case BtnRun
          BtnRunEvent(EventType())          
        Case ListCmd
          ListCmdEvent(EventType())          
        Case BtnMoveUp
          BtnUpEvent(EventType())          
        Case BtnMoveDown
          BtnDownEvent(EventType())          
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure

